<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PPPBPertemuan8" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_2</item>
        <item name="colorPrimaryVariant">@color/purple_3</item>
        <item name="colorOnPrimary">@color/purple_4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_2</item>
        <item name="colorSecondaryVariant">@color/purple_3</item>
        <item name="colorOnSecondary">@color/purple_4</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_2</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.PPPBPertemuan8.WithActionBar" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_2</item>
        <item name="colorPrimaryVariant">@color/purple_3</item>
        <item name="colorOnPrimary">@color/purple_4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_2</item>
        <item name="colorSecondaryVariant">@color/purple_3</item>
        <item name="colorOnSecondary">@color/purple_4</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_2</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Custom Rounded Button-->
    <style name="customRoundedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="customTextViewLargeBold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>